#    server cadvisor:8080 fail_timeout=0;
#}

upstream monitor {
    ip_hash;
    server monitor:5555 fail_timeout=0;

}

server {

    listen 80;

    #return 301 https://$host$request_uri;

     access_log /logs/nginx_access.log;
     error_log /logs/nginx_error.log;

     client_max_body_size 4G;
     keepalive_timeout 5;

     gzip off;  # security reasons
     gzip_proxied any;
     # chiminey generates uncompressed archives, so compress them in transit
     gzip_types application/x-javascript text/css;
     gzip_min_length 1024;
     gzip_vary on;

      location / {
         proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
         proxy_set_header Host $http_host;
         proxy_redirect off;

         proxy_pass http://chiminey;

         # this is to solve centos 6 error:
         # upstream prematurely closed
         client_max_body_size 4G;
         client_body_buffer_size 8192k;
         proxy_connect_timeout 2000;
         proxy_send_timeout 2000;
         proxy_read_timeout 2000;
     }

      location /static/ {
         expires 7d;
         alias /opt/chiminey/current/static/;
     }

    # error 502 redirect to error502.html
    error_page 502 @maintenance;
    location @maintenance {
        rewrite ^(.*)$ /static/simpleui/error502.html break;
    }

}


server {

    listen 443 ssl;

    ssl_certificate_key /opt/certs/chiminey.key;
    ssl_certificate /opt/certs/chiminey.crt;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers HIGH:!aNull:!MD5;

    client_max_body_size 4G;
    keepalive_timeout 5;

    gzip off;  # security reasons
    gzip_proxied any;
    # chiminey generates uncompressed archives, so compress them in transit
    gzip_types application/x-javascript text/css;
    gzip_min_length 1024;
    gzip_vary on;

    access_log /logs/nginx_access.log;
    error_log /logs/nginx_error.log;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        proxy_pass http://chiminey;

        # this is to solve centos 6 error:
        # upstream prematurely closed
        client_max_body_size 4G;
        client_body_buffer_size 8192k;
        proxy_connect_timeout 2000;
        proxy_send_timeout 2000;
        proxy_read_timeout 2000;
    }

    location /static/ {
        expires 7d;
        alias /opt/chiminey/current/static/;
    }
}
